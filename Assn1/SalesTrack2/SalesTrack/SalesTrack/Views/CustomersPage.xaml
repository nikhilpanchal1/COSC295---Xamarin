<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalesTrack.Views.CustomersPage"
             Title="Customers">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Products Settings" Command="{Binding GoToProductsSettingsCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCustomersCommand}">
        <StackLayout>
            <Label Text="Hello, world!"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>
